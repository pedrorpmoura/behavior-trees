%----------------------------------------------------------------------------------------
%   COMMANDS
%----------------------------------------------------------------------------------------


\newcommand{\nodestyle}{
    regular polygon,
    regular polygon sides=4,
    draw,
    minimum size=12mm,
    inner sep=0pt,
    thick
}

\newcommand{\controlflownodestyle}{
    \nodestyle,
    fill=lightgray
}


\newcommand{\rootnode}{
    $\varnothing$,\nodestyle,fill=green!20
}

% CONTROL FLOW NODES
\newcommand{\selector}{
    ?,\controlflownodestyle
}

\newcommand{\probselector}{
    $?_{P}$, 
    \controlflownodestyle,
    for children = {edge={decorate,decoration={snake,amplitude=.4mm,segment length=2mm,post length=1mm}}},
}

\newcommand{\sequence}{
    $\rightarrow$,
    \controlflownodestyle
}

\renewcommand{\parallel}[1] {
    $\rightrightarrows_{\scalebox{0.5}{$#1$}}$,
    \controlflownodestyle
}


\newcommand{\decoratorstyle} {
    diamond,
    draw,
    fill=lightgray,
    minimum size = 12mm,
    thick
}


\newcommand{\decorator}[1]{
    #1, \decoratorstyle
}

% pre-defined decorators
\newcommand{\inverter}{
    I, \decoratorstyle
}


% EXECUTION NODES
\newcommand{\action}[1] {
    #1,
    rectangle,
    draw,
    inner sep=7pt
}

\newcommand{\condition}[1] {
    #1,
    rounded rectangle,
    draw,
    inner sep=7pt
}
%----------------------------------------------------------------------------------------
%   ENVIRONMENT
%----------------------------------------------------------------------------------------

\newenvironment{behavior}{
    \bracketset{action character = @}
    \forestset{
        default preamble = {
            for tree = {l = 15mm, s sep = 8mm, parent anchor=south, child anchor=north}
        }
    }
    \forest
    @+
}{
    \endforest
}


